{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@scripts/*": [
        "src/scripts/*"
      ],
      "@images/*": [
        "public/assets/images/*"
      ],
    }
  },
}